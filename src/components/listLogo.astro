---
const { src, alt } = Astro.props;
---
<div class="w-1/2 md:w-1/6 px-2">
  <div class="w-full relative" style="aspect-ratio: 1/1">
    <img src={src} :alt={alt} loading="lazy" class="w-full h-full top-0 left-0 absolute object-scale-down grayscale hover:grayscale-0 duration-300" draggable="false">
	</div>
</div>
