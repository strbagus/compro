---
const { no, desc, name, loc, img } = Astro.props;
const alt = name+' profile'
---
<div class={["px-3 py-3 md:py-0 md:-mt-16 w-full md:w-1/3", no=="1" ? '-mt-16' : ''].join(' ')}>
  <div class="rounded-xl overflow-hidden shadow-lg h-full bg-stone-800 text-white">
    <div class="flex mx-5 mt-5 items-center">
      <div>
        <img src={ img } alt={ alt } loading="lazy" draggable="false" class="h-12 w-12 rounded-full">
      </div>
      <div class="ml-5">
        <div class="text-base font-medium">
          { name }
        </div>
        <div class="font-extralight text-sm">
          { loc }
        </div>
      </div>
    </div>
    <div class="pb-10 pt-5 px-3">
      <p class="text-sm">{ desc }</p>
      <div class="flex text-yellow-500 mt-3">
        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24"><path fill="currentColor" d="m5.825 22l1.625-7.025L2 10.25l7.2-.625L12 3l2.8 6.625l7.2.625l-5.45 4.725L18.175 22L12 18.275L5.825 22Z"/></svg>
        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24"><path fill="currentColor" d="m5.825 22l1.625-7.025L2 10.25l7.2-.625L12 3l2.8 6.625l7.2.625l-5.45 4.725L18.175 22L12 18.275L5.825 22Z"/></svg>
        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24"><path fill="currentColor" d="m5.825 22l1.625-7.025L2 10.25l7.2-.625L12 3l2.8 6.625l7.2.625l-5.45 4.725L18.175 22L12 18.275L5.825 22Z"/></svg>
        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24"><path fill="currentColor" d="m5.825 22l1.625-7.025L2 10.25l7.2-.625L12 3l2.8 6.625l7.2.625l-5.45 4.725L18.175 22L12 18.275L5.825 22Z"/></svg>
        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24"><path fill="currentColor" d="m5.825 22l1.625-7.025L2 10.25l7.2-.625L12 3l2.8 6.625l7.2.625l-5.45 4.725L18.175 22L12 18.275L5.825 22Z"/></svg>
      </div>
    </div>
  </div>
</div>
