---
const { desc, name, pos, img } = Astro.props;
const alt = name+' profile';
---
<div class="p-3 w-full md:w-1/3">
  <div class="rounded-xl overflow-hidden shadow-lg h-full bg-stone-800 text-white">
    <div class="flex justify-center my-3">
      <img src={ img } alt={ alt } loading="lazy" draggable="false" class="h-24 w-24 rounded-full">
    </div>
    <div class="ml-5">
      <div class="text-base font-medium">
        { name }
      </div>
      <div class="font-light font-sm">
        { pos }
      </div>
    </div>
    <div class="pt-3 pb-8 px-3">
      <p class="text-sm">{ desc }</p>
    </div>
  </div>
</div>
