---
const { route } = Astro.props;
---
<nav class="bg-secondary shadow-sm shadow-ternary fixed top-0 w-full z-40">
    <div class="max-w-[1000px] mx-auto flex flex-row flex-wrap text-white py-4">
      <div class="w-full md:w-1/3 flex items-center">
        <div class="text-xl italic text-primary mx-3 font-medium">
          <a href="/" class="flex items-center">
            <img src="/assets/logo.svg" alt="strblab icon logo" class="w-6 h-6 mr-1">
            starb<span class="text-white font-thin">lab</span>
          </a>
        </div>
      </div>
      <div class="w-full md:w-1/3 flex justify-center items-center">
        <ul class="flex flex-row flex-wrap" id="links">
          <li class={["mx-3 hover:underline", route==="/" ? 'active' : ''].join(' ')}><a href="/">home</a></li>
          <li class={["mx-3 hover:underline", route==="/portfolio" ? 'active' : ''].join(' ')}><a href="/portfolio">portfolio</a></li>
          <li class={["mx-3 hover:underline", route==="/about" ? 'active' : ''].join(' ')}><a href="/about">about</a></li>
